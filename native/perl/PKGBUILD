# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='perl'
pkgver='5.24.1'
pkgrel=14
pkgdesc="A highly capable, feature-rich programming language"

# Additional information...
arch=('mips' 'i586')
url="https://www.perl.org"
license=('GPL' 'PerlArtistic')

# Dependency information


# Building information
source=("http://www.cpan.org/src/5.0/${pkgname}-${pkgver}.tar.bz2")
md5sums=('178ee0e8fa544dbc76d99cf041e2c9f0')


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    ./Configure -des -Doptimize="${CFLAGS}" \
        -Dprefix=/usr -Dvendorprefix=/usr \
        -Dprivlib=/usr/share/perl5/core_perl \
        -Darchlib=/usr/lib/perl5/core_perl \
        -Dsitelib=/usr/share/perl5/site_perl \
        -Dsitearch=/usr/lib/perl5/site_perl \
        -Dvendorlib=/usr/share/perl5/vendor_perl \
        -Dvendorarch=/usr/lib/perl5/vendor_perl \
        -Dscriptdir=/usr/bin/core_perl \
        -Dsitescript=/usr/bin/site_perl \
        -Dvendorscript=/usr/bin/vendor_perl \
        -Dinc_version_list=none \
        -Dman1dir=/usr/share/man/man1 \
        -Dman3dir=/usr/share/man/man3 \
        -Dman1ext="1pm" -Dman3ext="3pm" \
        -Dlddlflags="${LDFLAGS}" -Dldflags="${LDFLAGS}" \
        -Dcc="gcc" \
        -Uusedl
    make
}


package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install

    sed -e '/^man1ext=/ s/1perl/1p/' -e '/^man3ext=/ s/3perl/3pm/' \
        -e "/^cf_email=/ s/'.*'/''/" \
        -e "/^perladmin=/ s/'.*'/''/" \
        -i "${pkgdir}/usr/lib/perl5/core_perl/Config_heavy.pl"
    sed -e '/(makepl_arg =>/   s/""/"INSTALLDIRS=site"/' \
        -e '/(mbuildpl_arg =>/ s/""/"installdirs=site"/' \
        -i "${pkgdir}/usr/share/perl5/core_perl/CPAN/FirstTime.pm"
    rm -f "${pkgdir}/usr/bin/perl${pkgver}"
    rm -rf "${pkgdir}/usr/lib/perl5/core_perl/auto"
    install -d -m755 "$pkgdir/usr/bin/vendor_perl"
    install -d -m755 "$pkgdir/usr/bin/site_perl"
}
