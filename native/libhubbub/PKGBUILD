# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='libhubbub'
pkgver='0.3.3'
pkgrel=61
pkgdesc="HTML5 parser library from the Netsurf project"

# Additional information...
arch=('mips' 'i586')
url="http://www.netsurf-browser.org/"
license=('MIT' 'GPL2')

# Dependency information
depends=('libparserutils')
makedepends=('git' 'netsurf-buildsystem' 'perl')

# Building information
source=("git://git.netsurf-browser.org/${pkgname}.git#tag=release/${pkgver}")
md5sums=('SKIP')


build() {
    cd "${srcdir}/${pkgname}"
    make LIBDIR=lib INCLUDEDIR=include PREFIX=/usr COMPONENT_TYPE="lib-shared"
}


package() {
    cd "${srcdir}/${pkgname}"

    make LIBDIR=lib INCLUDEDIR=include PREFIX=/usr COMPONENT_TYPE="lib-shared" \
        DESTDIR="${pkgdir}/" install
    install -Dm644 COPYING \
        "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
