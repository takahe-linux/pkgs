# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Based off the Arch Linux PKGBUILD

# Package information
pkgname='filesystem'
pkgver='2016.09'
pkgrel=2
pkgdesc='Base filesystem'

# Additional information...
arch=('any')
url='https://bitbucket.org/Alastair_Hughes/takahe-linux'
license=('GPL') # Can I change this?

# Dependency information
groups=('base')
depends=() # iana-etc in the Arch Linux PKGBUILD...

# Building information
backup=('etc/group'
        'etc/gshadow'
        'etc/passwd'
        'etc/shadow'
        'etc/shells'
        'etc/profile'
        'etc/issue')
source=('group'
        'gshadow'
        'issue'
        'passwd'
        'shadow'
        'shells'
        'profile')
md5sums=('96ac8b97d60f21957b65be52cecf0160'
         '9958873fc22f6d7323f3568f96ea15ed'
         '58233879530afb7b1c6a8e51a14d3433'
         'a9d43e66298f11c8e997268f6746b99b'
         '7a4d75479bc052c6dbe44ac957cb19d3'
         'eef6376b9b624b4aa0e2963f38597228'
         '0312230344b4795fb8fc1b660a9d25d4')

package() {
    cd ${pkgdir}

    # Setup root filesystem
    for d in boot dev etc home mnt usr var run; do
        install -d -m755 ${d}
    done
    install -d -m555 proc
    install -d -m555 sys
    install -d -m0750 root
    install -d -m1777 tmp

    # Setup /etc
    install -d ${pkgdir}/etc/profile.d
    for file in group issue passwd shells profile; do
        install -m644 "${srcdir}/${file}" "${pkgdir}/etc"
    done

    ln -s "/proc/self/mounts" "${pkgdir}/etc/mtab"
    for file in shadow gshadow; do
        install -m600 "${srcdir}/${file}" "${pkgdir}/etc"
    done

    # Setup /var
    for d in log/old; do
        install -d -m755 var/${d}
    done

    install -d -m1777 var/tmp
    ln -s ../run var/run
    ln -s ../run/lock var/lock
    install -d -m755 /run/lock
    # Add /bin...
    ln -s /usr/bin "${pkgdir}/bin"

    # Basically everything needs at least /bin/sh; add the /bin symlink.
    ln -s usr/bin bin

    # Setup /usr hierarchy
    for d in bin include lib share/misc; do
        install -d -m755 usr/${d}
    done
    for d in $(seq 8); do
        install -d -m755 usr/share/man/man${d}
    done
}
