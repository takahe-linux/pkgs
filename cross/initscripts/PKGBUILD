# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='initscripts'
pkgver='0.4'
pkgrel=9
pkgdesc="Startup and shutdown scripts"

# Additional information...
arch=('any')
url="https://bitbucket.org/Alastair_Hughes/takahe-linux/"
license=('MIT')

# Dependency information
groups=('base')
depends=('busybox' 'coreutils' 'util-linux')

# Building information
backup=('etc/init.d/init' 'etc/init.d/poweroff')
source=('init.sh'
        'poweroff.sh')
md5sums=('a64929d8c8b1b3a887215b25b6328a85'
         '5cc34b14b193c0a667ac0a4d0c613d79')


package() {
    cd "${srcdir}"
    install -Dm0755 "init.sh" "${pkgdir}/etc/init.d/init"
    install -Dm0755 "poweroff.sh" "${pkgdir}/etc/init.d/poweroff"
    ln -s "poweroff" "${pkgdir}/etc/init.d/reboot"
}
