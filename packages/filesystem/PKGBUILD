# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Based off the Arch Linux PKGBUILD

# Package information
pkgname='filesystem'
pkgver='2015.3'
pkgrel=1
pkgdesc='Base filesystem'

# Additional information...
arch=('any')
url=''
license=('GPL') # Can I change this?

# Dependency information
groups=('base')
depends=() # iana-etc in the Arch Linux PKGBUILD...

# Building information
backup=(
        'etc/group'
        'etc/passwd'
        'etc/shadow'
        'etc/motd'
        'etc/shells'
        'etc/profile'
        'etc/issue')
source=('group'
        'issue'
        'passwd'
        'shadow'
        'motd'
        'shells'
        'profile'
        'locale.sh')
md5sums=('96ac8b97d60f21957b65be52cecf0160'
         '58233879530afb7b1c6a8e51a14d3433'
         'a9d43e66298f11c8e997268f6746b99b'
         '7a4d75479bc052c6dbe44ac957cb19d3'
         'd41d8cd98f00b204e9800998ecf8427e'
         'eef6376b9b624b4aa0e2963f38597228'
         '203dbcc864f3e8e68e5da5eb5cfb663c'
         '7fd1a7398ccfa02172a12b0f6511e2fc')

package() {
    cd ${pkgdir}

    # Setup root filesystem
    for d in boot dev ${_configdir} ${_homedir} ${_prefix} var; do
        install -d -m755 ${d}
    done
    install -d -m555 proc
    install -d -m0750 root
    install -d -m1777 tmp

    # Setup /etc
    install -d ${pkgdir}${_configdir}/profile.d
    for file in group issue motd passwd shells profile; do
        install -m644 "${srcdir}/${file}" "${pkgdir}${_configdir}"
    done

    ln -s "/proc/self/mounts" "${pkgdir}${_configdir}/mtab"
    for file in shadow; do
        install -m600 "${srcdir}/${file}" "${pkgdir}${_configdir}"
    done

    install -m755 "${srcdir}/locale.sh" "${pkgdir}${_configdir}/profile.d/locale.sh"

    # Setup /var
    for d in cache/man local opt log/old lib/misc empty; do
        install -d -m755 var/${d}
    done

    install -d -m1777 var/{tmp}
    ln -s spool/mail var/mail
    ln -s ../run var/run
    ln -s ../run/lock var/lock

    # Setup /usr hierarchy
    for d in bin include lib share/misc src; do
        install -d -m755 usr/${d}
    done
    for d in $(seq 8); do
        install -d -m755 usr/share/man/man${d}
    done
}
