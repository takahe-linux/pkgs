# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Based on the Arch Linux PKGBUILD

# Package information
_pkgname='m4'
pkgname="${_target_triplet}-${_pkgname}"
pkgver='1.4.17'
pkgrel=1
pkgdesc="The GNU macro processor"

# Additional information...
arch=('x86_64')
url="http://www.gnu.org/software/m4"
license=('GPL3')

# Dependency information
groups=("${_target_triplet}")
depends=('glibc')

# Building information
source=("ftp://ftp.gnu.org/gnu/m4/${_pkgname}-${pkgver}.tar.xz")
md5sums=('12a3c829301a4fd6586a57d3fcf196dc')

build() {
    cd "${srcdir}/${_pkgname}-${pkgver}"

    ./configure --prefix="${_toolroot}"
    make
}


check() {
    cd "${srcdir}/${_pkgname}-${pkgver}"

    make check
}


package() {
    cd "${srcdir}/${_pkgname}-${pkgver}"

    make DESTDIR="${pkgdir}${_toolroot}" install
}
