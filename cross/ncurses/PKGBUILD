# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='ncurses'
pkgver='6.1'
pkgrel=3
pkgdesc='System V Release 4.0 curses emulation library'

# Additional information...
arch=('i586' 'mips')
url='http://invisible-island.net/ncurses/ncurses.html'
license=('MIT')

# Dependency information
depends=('musl')
hostdepends=('toolchain')

# Building information
source=("https://invisible-mirror.net/archives/ncurses/ncurses-${pkgver}.tar.gz")
md5sums=('98c889aaf8d23910d2b92d65be2e737a')


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    ./configure --prefix="/usr" \
        --host="${_target_triplet}" \
        --mandir="/usr/share/man" \
        --enable-overwrite \
        --with-build-cc="gcc" \
        --with-shared \
        --without-debug \
        --without-tests \
        --without-ada \
        --without-cxx \
        --without-cxx-binding
    make
}


package() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    make DESTDIR="${pkgdir}/" install

    # Install license, rip it from the readme
    install -dm755 "${pkgdir}/usr/share/licenses/${pkgname}"
    grep -B 100 '$Id' README > "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
