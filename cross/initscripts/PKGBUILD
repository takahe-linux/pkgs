# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='initscripts'
pkgver='0.3'
pkgrel=8
pkgdesc="Startup and shutdown scripts"

# Additional information...
arch=('any')
url="https://bitbucket.org/Alastair_Hughes/takahe-linux/"
license=('MIT')

# Dependency information
groups=('base')
depends=('busybox' 'coreutils' 'util-linux' 'sh')

# Building information
backup=('etc/init.d/init' 'etc/init.d/shutdown' 'etc/init.d/reboot')
source=('init.sh'
        'shutdown.sh'
        'reboot.sh')
md5sums=('570da713411f054f4d8c979c3f0d6919'
         'b6d6ba862a24cc809376af41df058f82'
         '00ff07fddd2099d2021fee8ec9d2d97b')


package() {
    cd "${srcdir}"
    install -Dm0755 "init.sh" "${pkgdir}/etc/init.d/init"
    install -Dm0755 "shutdown.sh" "${pkgdir}/etc/init.d/shutdown"
    install -Dm0755 "reboot.sh" "${pkgdir}/etc/init.d/reboot"
}
