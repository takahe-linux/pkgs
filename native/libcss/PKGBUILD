# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='libcss'
pkgver='0.6.1'
pkgrel=45
pkgdesc="CSS library from the Netsurf project"

# Additional information...
arch=('mips' 'i586')
url="http://www.netsurf-browser.org/"
license=('MIT' 'GPL2')

# Dependency information
depends=('libwapcaplet' 'libparserutils')
makedepends=('git' 'netsurf-buildsystem' 'perl')

# Building information
source=("git://git.netsurf-browser.org/${pkgname}.git#tag=release/${pkgver}"
        *.patch)
md5sums=('SKIP'
         'd829f5d25a4b6fd75e0239fbcbc7bd3b')


prepare() {
    cd "${srcdir}/${pkgname}"

    patch -p1 < "${srcdir}"/*.patch
}


build() {
    cd "${srcdir}/${pkgname}"
    make LIBDIR=lib INCLUDEDIR=include PREFIX=/usr
}


package() {
    cd "${srcdir}/${pkgname}"

    make LIBDIR=lib INCLUDEDIR=include PREFIX=/usr \
        DESTDIR="${pkgdir}/" install
    install -Dm644 COPYING \
        "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
