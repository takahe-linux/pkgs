# Maintainer: Alastair Hughes < hobbitalastair at yandex dot com>

# Package information
pkgname='gmp'
pkgver='6.1.0'
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic"

# Additional information...
arch=('mips')
url="http://gmplib.org/"
license=('LGPL3' 'GPL')

# Dependency information
makedepends=('libc')
# Depends: packages/musl targets/toolchain
#depends=('gcc-libs') A hostdep...
#makedepends=('m4') # Another hostdep...

# Building information
source=("ftp://ftp.gmplib.org/pub/${pkgname}-${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('a9868ef2556ad6a2909babcd1428f3c7')


build() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    CC_FOR_BUILD="${HOSTCC}" \
    ./configure --prefix="${_prefix}" \
        --build="${_local_triplet}" \
        --host="${_target_triplet}" \
        --disable-shared \
        --enable-cxx

    make
}


package() {
    cd "${srcdir}/${pkgname}-${pkgver}"

    make DESTDIR="${pkgdir}/" install

    rm -rf "${pkgdir}${_prefix}/share/info"
}
